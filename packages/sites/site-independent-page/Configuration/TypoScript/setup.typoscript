@import 'EXT:fluid_styled_content/Configuration/TypoScript/setup.typoscript'
@import 'EXT:site-independent-page/Configuration/TypoScript/Lib/*.typoscript'

page = PAGE
page {
    10 = FLUIDTEMPLATE
    10 {
        templateName = TEXT
        templateName {
            cObject = TEXT
            cObject {
                data = pagelayout
                required = 1
                case = uppercamelcase
                split {
                    token = pagets__
                    cObjNum = 1
                    1.current = 1
                }
            }

            ifEmpty = Default
        }

        templateRootPaths {
            0 = EXT:site-independent-page/Resources/Private/Templates/Page/
        }

        partialRootPaths {
            0 = EXT:site-independent-page/Resources/Private/Partials/Page/
        }

        layoutRootPaths {
            0 = EXT:site-independent-page/Resources/Private/Layouts/Page/
        }
    }
}